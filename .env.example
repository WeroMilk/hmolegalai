# Firebase Configuration
# Poner NEXT_PUBLIC_FIREBASE_ENABLED=true solo cuando tengas credenciales reales (evita auth/api-key-not-valid)
NEXT_PUBLIC_FIREBASE_ENABLED=false
# URL de la app en producción (para enlaces de verificación de correo). Ej: https://hmolegalai.vercel.app
NEXT_PUBLIC_APP_URL=
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_auth_domain
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_storage_bucket
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Firebase Admin (para verificación de tokens en el servidor)
FIREBASE_CLIENT_EMAIL=your_client_email
FIREBASE_PRIVATE_KEY=your_private_key

# Stripe Configuration
# Para PAGOS REALES usa claves LIVE (pk_live_... y sk_live_...) en Stripe Dashboard:
# https://dashboard.stripe.com/apikeys — cambia el interruptor "Modo de prueba" a DESACTIVADO.
# Con claves de prueba (pk_test_ / sk_test_) solo funcionan tarjetas de prueba (ej. 4242 4242 4242 4242).
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_publishable_key
STRIPE_SECRET_KEY=your_secret_key

# OpenAI Configuration (clave real en https://platform.openai.com/api-keys, empieza por sk-)
OPENAI_API_KEY=your_openai_api_key
